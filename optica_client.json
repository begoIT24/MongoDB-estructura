var mongoose = require('mongoose');
var Schema = mongoose.Schema;
var client = new Schema({
  name: {
    type: String,
    required: true
  },
  address: {
    type: String,
    required: true
  },
  phone: {
    type: Number,
    required: true
  },
  email: {
    type: String,
    required: true
  },
  register_date: {
    type: Date,
    required: true
  },
  shopping: [{
    id_glasses: {
      type: Schema.Types.ObjectId,
      required: true
    },
    price: {
      type: Number,
      required: true
    },
    id_staff: {
      type: Schema.Types.ObjectId,
      required: true
    },
    date: {
      type: String,
      required: true
    }
  }]
});
